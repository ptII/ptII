package ptolemy.backtrack.plugin.console;

import org.eclipse.ui.console.IConsoleFactory;

import ptolemy.backtrack.plugin.EclipsePlugin;

/**
 * Console factory is used to show the console from the Console view
 * "Open Console" drop-down action. This factory is registered via the
 * org.eclipse.ui.console.consoleFactory extension point.
 * 
 * @since 3.1
 */
public class ConsoleFactory implements IConsoleFactory {

    public ConsoleFactory() {
    }
    
    public void openConsole() {
        showConsole();
    }
    
    public static void showConsole() {
        OutputConsole console = EclipsePlugin.getDefault().getConsole();
        if (console != null) {
            console.register();
            console.show();
        }
    }
    
    public static void closeConsole() {
        OutputConsole console = EclipsePlugin.getDefault().getConsole();
        if (console != null)
            console.unregister();
    }
}
