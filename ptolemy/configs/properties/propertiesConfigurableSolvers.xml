<!-- Library of actors that are properties. -->
  <configure>
    <?moml
      <group>
	    <property name="OntologyAttribute" class="ptolemy.domains.properties.kernel.OntologyAttribute">
	          <property name="_controllerFactory" class="ptolemy.vergil.properties.ModelAttributeControllerFactory">
                  </property>
	    </property>
	    <property name="PropertyLatticeAttribute" class="ptolemy.domains.properties.kernel.PropertyLatticeAttribute">
	          <property name="_controllerFactory" class="ptolemy.vergil.properties.ModelAttributeControllerFactory">
                  </property>
	    </property>
	    <property name="AnnotationAttribute" class="ptolemy.data.properties.AnnotationAttribute">
		  <property name="_hideName" class="ptolemy.kernel.util.SingletonAttribute"/>
	      <property name="_icon" class="ptolemy.vergil.icon.ValueIcon">
		    <property name="_color" class="ptolemy.actor.gui.ColorAttribute" value="{1.0, 0.0, 0.0, 1.0}"/>
  		  </property>
		  <property name="_smallIconDescription" 
		            class="ptolemy.kernel.util.SingletonConfigurableAttribute">
		    <configure><svg><text x="20" style="font-size:14; font-family:SansSerif; fill:blue"
		              y="20">-A-</text></svg></configure>
		  </property>
		  <property name="_editorFactory" class="ptolemy.vergil.toolbox.VisibleParameterEditorFactory"/>
		</property>
		
        <property name="PropertyConstraintSolver" class="ptolemy.data.properties.lattice.PropertyConstraintSolver">
        	<!--FIXME: It is better if there is a way to instantiate this in the PropertySolver base class. -->
        	<property name="PropertyDisplayActions" class="ptolemy.data.properties.gui.PropertyDisplayActions"/>
        </property>
        <property name="PropertyTokenSolver" class="ptolemy.data.properties.token.PropertyTokenSolver">
        	<!--FIXME: It is better if there is a way to instantiate this in the PropertySolver base class. -->
        	<property name="PropertyDisplayActions" class="ptolemy.data.properties.gui.PropertyDisplayActions"/>
        </property>
        <property name="PropertyCombineSolver" class="ptolemy.data.properties.token.PropertyCombineSolver">
        	<!--FIXME: It is better if there is a way to instantiate this in the PropertySolver base class. -->
        	<property name="PropertyDisplayActions" class="ptolemy.data.properties.gui.PropertyDisplayActions"/>
        </property>
        <property name="PropertyRemover" class="ptolemy.data.properties.PropertyRemover"/>
      </group>
    ?>
  </configure>
