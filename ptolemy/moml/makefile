ME =		ptolemy/moml

# $PTII/configure looks for JXTA and sets PTJXTA_DIR in
# $PTII/mk/ptII.mk if it was found.  Otherowise, PTJXTA_DIR is empty.
DIRS = 		demo filter $(PTJXTA_DIR) unit test

# Root of the Java directory
ROOT =		../..

CLASSPATH =	$(ROOT)

# Get configuration info
CONFIG =	$(ROOT)/mk/ptII.mk
include $(CONFIG)

# Used to build jar files
PTPACKAGE = 	moml
PTCLASSJAR =

# Include the .class files from these jars in PTCLASSALLJAR
PTCLASSALLJARS = \
	filter/filter.jar \
	unit/unit.jar

PTCLASSALLJAR = $(PTPACKAGE).jar

JSRCS =	Documentation.java \
	ConvertToLazy.java \
	EntityLibrary.java \
	ErrorHandler.java \
	HandlesInternalLinks.java \
	IconLoader.java \
	ImportAttribute.java \
	LibraryAttribute.java \
	LibraryBuilder.java \
	MissingClassException.java \
	MoMLAttribute.java \
	MoMLChangeRequest.java \
	MoMLCommandLineApplication.java \
	MoMLFilter.java \
	MoMLModelAttribute.java \
	MoMLParser.java \
	MoMLSimpleApplication.java \
	MoMLUndoEntry.java \
	MoMLVariableChecker.java \
	ParserAttribute.java \
	StreamErrorHandler.java \
	UndoContext.java \
	Vertex.java


EXTRA_SRCS =	$(JSRCS) \
	moml.dtd

# Sources that may or may not be present, but if they are present, we don't
# want make checkjunk to barf on them.
# Don't include demo or DIRS here, or else 'make sources' will run 'make demo'
MISC_FILES = \
	filter \
	jxta \
	MoML_1.dtd

# make checkjunk will not report OPTIONAL_FILES as trash
# make realclean removes OPTIONAL_FILES
OPTIONAL_FILES = \
	doc \
	demo \
	test \
	unit \
	$(PTCLASSJAR) \
	'Documentation$$1.class' \
	'MoMLParser$$1.class' \
	'MoMLParser$$DeleteRequest.class' \
	'MoMLParser$$LinkRequest.class' \
	'MoMLParser$$UnlinkRequest.class' \
	'MoMLSimpleApplication$$1.class' \
	'MoMLSimpleApplication$$UnloadThread.class'

JCLASS = $(JSRCS:%.java=%.class)


all: jclass

install: all jars

demo: all

# Get the rest of the rules
include $(ROOT)/mk/ptcommon.mk
