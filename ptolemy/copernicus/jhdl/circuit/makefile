ME =		ptolemy/copernicus/jhdl/circuit

# Root of the Java directory
ROOT =		../../../..

# $PTII/configure looks for Soot and JHDL and sets
# variables in $PTII/mk/ptII.mk
CLASSPATH = 	$(ROOT)$(CLASSPATHSEPARATOR)$(SOOT_CLASSES)$(CLASSPATHSEPARATOR)$(JHDL_JAR)

# Get configuration info
CONFIG =	$(ROOT)/mk/ptII.mk
include $(CONFIG)

DIRS =

# Keep this list alphabetized.
JSRCS = \
	ActorPortDirectedGraph.java \
	CompositeActor2JHDLCompositeActor.java \
	ConstructJHDL.java \
	JHDLActorTestbench.java \
	JHDLAtomicActor.java \
	JHDLBinOpActor.java \
	JHDLCompositeActor.java \
	JHDLConstantActor.java \
	JHDLIOPort.java \
	JHDLIORelation.java \
	JHDLUnOpActor.java \
	ModelGraph2Entity.java \
	PortDirectedGraph.java \
	Resolve.java \
	Signal.java \
	SimpleSignal.java \
	SimpleTestbench.java

#	ModelGraph2Circuit.java \
#	Circuit.java \
#	Signal.java \
#	Net.java \
#	Port.java \
#	DGToJHDLCircuit.java \

OTHER_FILES_TO_BE_JARED =

EXTRA_SRCS =	$(JSRCS) $(OTHER_FILES_TO_BE_JARED)


# Sources that may or may not be present, but if they are present, we don't
# want make checkjunk to barf on them.
MISC_FILES =	$(DIRS) \
	demo

# make checkjunk will not report OPTIONAL_FILES as trash
# make distclean removes OPTIONAL_FILES
OPTIONAL_FILES = \
	doc

JCLASS = $(JSRCS:%.java=%.class)

all: jclass
	@echo "To run the demo, run 'make demo'"

install: all

test1: all
	java ptolemy.copernicus.jhdl.CircuitGenerator ptolemy.copernicus.jhdl.test.hwgentest method1

# Get the rest of the rules
include $(ROOT)/mk/ptcommon.mk

