ME =		ptolemy/apps/charon

DIRS =

# Root of the Ptolemy II directory
ROOT =		../../..

CLASSPATH =	$(DIVA_JAR)$(CLASSPATHSEPARATOR)$(ROOT)

# Get configuration info
CONFIG =	$(ROOT)/mk/ptII.mk
include $(CONFIG)

JSRCS = \
	Agent.java \
	Assertion.java \
	CharonCodeGenerator.java \
	CharonToPtolemyII.java \
	CharonProcessor.java 

EXTRA_SRCS =	$(JSRCS)

# Sources that may or may not be present, but if they are present, we don't
# want make checkjunk to barf on them.
MISC_FILES =	$(DIRS)

JCLASS = $(JSRCS:%.java=%.class)


all: jclass

# Get the rest of the rules
include $(ROOT)/mk/ptcommon.mk

demo: 
	$(JAVA) -classpath "$(CLASSPATH)" ptolemy.apps.charon.CharonToPtolemyII ./demo/v2v.cn > bar.log
