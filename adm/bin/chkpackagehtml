#! /bin/sh
# $Id$
# Check that a directory has README.txt and package.html

for package in $@
do
	directory=`echo $package | sed 's@\.@/@g'`
	if [ ! -f "$directory/README.txt" ]; then
	   echo "$directory/README.txt does not exist"
        fi	   

	if [ ! -f "$directory/package.html" ]; then
	   echo "$directory/package.html does not exist"
        fi	   
done